@model EventListViewModel
@{
    ViewData["Title"] = "My Events";
}

<div>
    <h1>My Events</h1>

    <div class="row mb-1">
        <div class="col-md-12">
            <a class="btn btn-primary" asp-controller="Event" asp-action="Create">Create Event</a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th></th>
        </tr>
        @if (!Model.Items.Any())
        {
            <tr>
                <td colspan="6">No events</td>
            </tr>
        }

        @foreach (var item in Model.Items)
        {
    <tr>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>@item.Location</td>
        <td>@item.StartDate.ToString("g")</td>
        <td>@item.EndDate.ToString("g")</td>
        <td><a asp-action="EventRegistrations" asp-route-eventId="@(item.Id)">Registrations</a></td>
    </tr>
        }
    </table>
</div>
